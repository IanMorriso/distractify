{
    "name": "distractify",
    "description": "Reduces performance of targeted websites",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "permission": ["storage", "activeTab"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.github.com/*",
                "https://*.youtube.com/*"
            ],
            "js": [
                "/effects/browser-scroller.js",
                "/effects/performance-inhibitor.js",
                "/effects/obscurify.js"
            ]
        }
    ],
    "options_page": "options/options.html"
}